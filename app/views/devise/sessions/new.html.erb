
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="devise-container">
  <center>
  <h2>Log in</h2>
  </center>
    <div class="row">
      <div class="form-group">
        <%= f.label :email %><span class="red"> * </span><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" ,required: true %>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <%= f.label :password %><span class="red"> * </span><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" ,required: true%>
      </div>
    </div>
    <div class="row">
      <div class="form-group actions">
        <% if devise_mapping.rememberable? -%>
          <div class="field pull-left">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
      <%= f.submit "Log in", class: "btn btn-lg bg-danger" , id: 'login' %>
      &nbsp;&nbsp;
      <%= link_to 'Sign in with facebook' , user_facebook_omniauth_authorize_path ,class: 'btn btn-lg btn-primary' %>
          <div class="pull-right">
       <%= render "devise/shared/links" %>
      </div>
   </div>
  </div>
</div>
  
<% end %>
